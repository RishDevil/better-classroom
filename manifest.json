{
	"manifest_version": 3,
	"name": "Better Classroom",
	"description": "TO ADD DESCRIPTION",
	"version": "0.0.1",
	"icons": {
		"16": "images/16.png",
		"48": "images/48.png",
		"128": "images/128.png"
	},
	"action": {
		"default_icon": {
			"16": "images/16.png",
			"48": "images/48.png",
			"128": "images/128.png"
		},
		"default_popup": "popup.html"
	},
	"web_accessible_resources": [
		{
			"resources": [
				"/html/folder_creation_modal.html",
				"/html/dropdown_list.html"
			],
			"matches": ["<all_urls>"]
		}
	],
	"background": {
		"service_worker": "main.js"
	},
	"permissions": ["tabs", "activeTab", "scripting", "nativeMessaging"],
	"content_scripts": [
		{
			"matches": [
				"https://classroom.google.com/u/*/",
				"https://classroom.google.com/u/*/h"
			],
			"js": ["content.js"],
			"run_at": "document_end"
		}
	]
}
